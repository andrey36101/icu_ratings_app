%table
  %tr
    %th Headline
    %th Created
    %th Updated
    %th Reporter
  - if @news_items.count == 0
    %tr
      %td{:colspan => 4, :class => "centered"} No matches
  - else
    - @news_items.matches.each do |news|
      %tr
        %td= link_to news.headline, news
        %td{:class => "centered"}= l news.created_at.to_date, :format => :long
        %td{:class => "centered"}= l news.updated_at.to_date, :format => :long
        %td= news.user.name
  - if @news_items.multi_page
    %tr
      %td{:colspan => 4, :class => "centered"}= pagination_links(@news_item)
