= form_for @download, html: {multipart: true, class: "simple-form wide"} do |f|
  - if @download.errors.any?
    = render "shared/errors", thing: @download, name: "download"
  .input
    = f.label :uploaded_file, "File to upload"
    = f.file_field :uploaded_file
  .input
    = f.label :comment
    = f.text_field :comment, size: 80, maxlength: 80
  .input
    = f.submit @download.new_record? ? "Create" : "Update"
    = f.submit "Cancel", class: "extra"
