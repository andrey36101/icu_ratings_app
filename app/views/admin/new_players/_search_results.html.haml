%table
  %tr
    %th Last Name
    %th First Name
    %th DOB
    %th Fed
    %th Tournament
    %th Date
  - if @new_players.count == 0
    %tr
      %td{colspan: 6, class: "centered"} No matches
  - else
    - @new_players.matches.each do |p|
      %tr
        %td= p.last_name
        %td= p.first_name
        %td= p.dob
        %td= p.fed
        %td= link_to p.tournament.name, [:admin, p]
        %td= p.tournament.finish
  - if @new_players.multi_page
    %tr
      %td{colspan: 6, class: "centered"}= pagination_links(@new_players)
