= form_for [:admin, @tournament], remote: true do |f|
  = hidden_field_tag :ranks
  %table{class: "right-headers noborder"}
    %tr
      - ranking = @tournament.ranking_summary
      %th= label_tag :rank, ranking[:rankable] ? "Rerank" : "Rank"
      %td= check_box_tag :rank, 1, !ranking[:valid]
    %tr
      %th= label_tag :order, "Display in rank order"
      %td= check_box_tag :order, 1, true
