%table
  %tr
    %th
    %th
    %th #
    %th Name
    %th Start
    %th Reporter
  - if @tournaments.count == 0
    %tr
      %td{colspan: 6, class: "centered"} No matches
  - @tournaments.matches.each do |t|
    - stage = t.stage
    - status = t.status == "ok" ? "ok" : "problems"
    %tr
      %td= image_tag "icons/#{stage}.png", alt: t(stage), title: t(stage)
      %td= image_tag "icons/#{status}.png", alt: t(status), title: t(status)
      %td= t.rorder
      %td= link_to t.name, [:admin, t]
      %td= t.start
      %td= t.user.name
  - if @tournaments.multi_page
    %tr
      %td{colspan: 6, class: "centered"}= pagination_links(@tournaments)
