%table
  %tr
    %th{rowspan: 2} List
    %th{colspan: 2} Cut-Offs
  %tr
    %th Tournament
    %th Payment
  - if @rating_lists.count == 0
    %tr
      %td{class: "centered", colspan: 3} No matches
  - else
    - @rating_lists.matches.each do |rating_list|
      %tr
        %td= link_to year_month(rating_list.date), [:admin, rating_list]
        %td= rating_list.tournament_cut_off
        %td= rating_list.payment_cut_off
  - if @rating_lists.multi_page
    %tr
      %th{class: "centered", colspan: 3}= pagination_links(@rating_lists)
