= form_tag admin_old_tournaments_path, method: "get", id: handle_remote_id do
  = hidden_field_tag :per_page, params[:per_page]
  %table{class: "invisible"}
    %tr
      %th= label_tag :name, "Name and/or Year"
      %th= label_tag :icu_id, "ICU ID"
      %th
    %tr
      %td= text_field_tag :name, params[:name], onchange: handle_remote, class: "centered", size: 20
      %td= text_field_tag :icu_id, params[:icu_id], onchange: handle_remote, class: "centered", size: 10
      %td= submit_tag "Search"
