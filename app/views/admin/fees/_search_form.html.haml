= form_tag admin_fees_path, method: "get", id: handle_remote_id do
  = hidden_field_tag :per_page, params[:per_page]
  %table{class: "invisible"}
    %tr
      %th= label_tag :last_name
      %th= label_tag :first_name
      %th= label_tag :description, "Tournament"
      %th= label_tag :status
      %th= label_tag :used
      %th
    %tr
      %td= text_field_tag :last_name, params[:last_name], onchange: handle_remote, class: "centered", size: 15
      %td= text_field_tag :first_name, params[:first_name], onchange: handle_remote, class: "centered", size: 15
      %td= text_field_tag :description, params[:description], onchange: handle_remote, class: "centered", size: 15
      %td= select_tag :status, options_for_select(fee_status_menu("Any"), params[:status]), onchange: handle_remote
      %td= select_tag :used, options_for_select(fee_used_menu("Any"), params[:used]), onchange: handle_remote
      %td= submit_tag "Search"
