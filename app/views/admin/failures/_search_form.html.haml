= form_tag admin_failures_path, method: "get", id: handle_remote_id do
  = hidden_field_tag :per_page, params[:per_page]
  %table{class: "invisible"}
    %tr
      %th= label_tag :name
      %th= label_tag :age, "Age"
      %th
    %tr
      %td= text_field_tag :name, params[:name], onchange: handle_remote, class: "centered", size: 15
      %td{class: "centered"}= text_field_tag :age, params[:age], onchange: handle_remote, class: "centered", size: 3, maxlength: 3
      %td= submit_tag "Search"
