%table
  %tr
    %th Name
    %th Time Ago
    %th{class: "floater"}
  - if @failures.count == 0
    %tr
      %td{colspan: 2, class: "centered"} No matches
      %td{class: "floater"}
  - else
    - @failures.matches.each do |failure|
      %tr
        %td= failure.name
        %td= time_ago_in_words(failure.created_at, true)
        %td{class: "floater"}
          = link_to admin_failure_path(failure), remote: true do
            = icon_tag "show", "Show failure details"
          = link_to admin_failure_path(failure), data: { confirm: "Are you sure you want to delete this event?" }, method: :delete do
            = icon_tag "bin", "Delete failure"
  - if @failures.multi_page
    %tr
      %th{class: "centered", colspan: 2}= pagination_links(@failures)
      %th{class: "floater"}
