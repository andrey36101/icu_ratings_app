%table{class: table_class}
  %tr
    %th New Player
    %td{colspan: 2}= "#{@player.name}"
  = render "rating_calculation"
  %tr
    %th= t "ratings.new_rating"
    %td= @player.new_rating
    %td= explain_new_rating(@player)
  = render "more_info"
  %tr
    %th= t "ratings.new_games"
    %td= @player.new_games
    %td= explain_new_games(@player)

= render "results"
