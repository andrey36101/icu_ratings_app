- handleRemote = handle_remote("war_form")
= form_tag war_icu_ratings_path, method: "get", id: "war_form" do
  %table{class: "invisible"}
    %tr
      %th= label_tag :method
      %th= label_tag :gender
    %tr
      %td= select_tag :method, options_for_select(@war.methods_menu, params[:method]), onchange: handleRemote
      %td= select_tag :gender, options_for_select(@war.gender_menu, params[:gender]), onchange: handleRemote
