%table
  %tr
    %th
    %th Name
    %th Date
  - if @tournaments.count == 0
    %tr
      %td{colspan: 3, class: "centered"} No matches
  - @tournaments.matches.each do |t|
    %tr
      %td= icon_tag t.stage, t(t.stage)
      %td= link_to t.name, t
      %td= t.finish
  - if @tournaments.multi_page
    %tr
      %td{colspan: 3, class: "centered"}= pagination_links(@tournaments)
