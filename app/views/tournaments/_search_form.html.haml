= form_tag tournaments_path, method: "get", id: handle_remote_id do
  = hidden_field_tag :per_page, params[:per_page]
  %table{class: "invisible"}
    %tr
      %th{colspan: 3, class: "underlined"} Tournament
      %th{colspan: 3, class: "underlined"} Player
    %tr
      %th= label_tag :name, "Name"
      %th= label_tag :year, "Year"
      %th= label_tag :fide_rated, "FIDE"
      %th= label_tag :last_name, "Last Name"
      %th= label_tag :first_name, "First Name"
      %th= label_tag :icu_id, "ICU ID"
    %tr
      %td= text_field_tag :name, params[:name], onchange: handle_remote, class: "centered", size: 20
      %td= text_field_tag :year, params[:year], onchange: handle_remote, class: "centered", size: 4
      %td= select_tag :fide_rated, options_for_select(fide_rated_menu("Any"), params[:fide_rated]), onchange: handle_remote
      %td= text_field_tag :last_name, params[:last_name], onchange: handle_remote, class: "centered", size: 15
      %td= text_field_tag :first_name, params[:first_name], onchange: handle_remote, class: "centered", size: 10
      %td= text_field_tag :icu_id, params[:icu_id], onchange: handle_remote, class: "centered", size: 10
  %table{class: "invisible turbaned"}
    %tr
      %td= submit_tag "Search"

