%h3{class: "centered"} Tournament Player
- changed = @player.changed_from_original?(except: [:icu_rating, :fide_rating])
%table
  %tr
    %th ICU ID
    %th Name
    %th DOB
    %th Sex
    %th Fed
    %th Title
    %th FIDE ID
    %th Note
  %tr
    %td= @player.icu_id
    %td= @player.name
    %td= @player.dob
    %td{class: "centered"}= @player.gender
    %td{class: "centered"}= @player.fed
    %td{class: "centered"}= @player.title
    %td= @player.fide_id
    %td= "#{changed ? 'Current' : 'Original'} data"
    - if changed
      %tr
        %td= @player.original_icu_id
        %td= @player.original_name
        %td= @player.original_dob
        %td{class: "centered"}= @player.original_gender
        %td{class: "centered"}= @player.original_fed
        %td{class: "centered"}= @player.original_title
        %td= @player.original_fide_id
        %td Original data
